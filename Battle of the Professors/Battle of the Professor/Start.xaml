<Page x:Class="Battle_of_the_Professor.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battle_of_the_Professor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Start">

    <Grid>
        <Button x:Name="btnNewGame" Content="NEW GAME" HorizontalAlignment="Center" Margin="0,0,0,120" VerticalAlignment="Center" Width="200" Height="50" Click="btnNewGame_Click"/>
        <Button x:Name="btnLoadGame" Content="LOAD GAME" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="200" Height="50" Click="btnLoadGame_Click"/>
        <Button x:Name="btnExit" Content="EXIT" HorizontalAlignment="Center" Margin="0,120,0,0" Width="200" Click="btnExit_Click" VerticalAlignment="Center" Height="50"/>

    </Grid>
</Page>
