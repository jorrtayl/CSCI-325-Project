<Page x:Class="Battle_of_the_Professor.LoadGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battle_of_the_Professor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadGamePage">

    <Grid>
        <TextBlock x:Name="txtBlockLoad" HorizontalAlignment="Center" Margin="0,0,0,60" TextWrapping="Wrap" Text="ENTER EXISTING SAVE" VerticalAlignment="Center" Width="250" Height="50" TextAlignment="Center" FontSize="24"/>
        <TextBox x:Name="txtLoadEntry" HorizontalAlignment="Center" Height="20" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="250" TextAlignment="Center" KeyDown="OnKeyDownHandler"/>
        <Button x:Name="btnBackToSelection" Content="BACK" Margin="0,0,0,0.6" Click="btnBackToSelection_Click" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75"/>

    </Grid>
</Page>
